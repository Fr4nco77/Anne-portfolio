---
import SquareButton from "@components/ui/squareButton.astro";

interface Props {
  title: string;
  subtitle: string;
  button: {
    label: string;
    to: string;
  };
  currentLang: string;
}

const { title, subtitle, button, currentLang } = Astro.props;
---

<div
  class="lg:animate-revealY flex size-full flex-col items-center justify-center pt-[100px] pb-[68px] lg:opacity-0"
  style="animation-delay: 2s"
>
  <h1
    class="title text-center text-[max(16px,16.5333vw)] uppercase min-[448px]:text-[70px] md:text-[80px] lg:text-[100px] xl:text-[max(16px,6vw)]"
  >
    {title}
  </h1>
  <p
    class="mx-auto mt-11 text-center text-[18px] md:text-[20px] lg:text-[22px] xl:text-[24px]"
  >
    {subtitle}
  </p>
  <SquareButton to={button.to} lang={currentLang} styles="mt-10">
    {button.label}
  </SquareButton>
</div>
