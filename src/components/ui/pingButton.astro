---
interface Props {
  to: string;
  label: string;
  attrExternal?: {
    target: string;
  };
}

const { to, label, attrExternal } = Astro.props;
---

<a href={to} {...attrExternal} class="group flex items-center gap-1.5">
  <span
    class="bg-accent-primary block size-0 rounded-full transition-all duration-300 group-hover:size-2.5"
  ></span>
  <span
    class="block text-lg min-[448px]:text-[calc(13.6px+0.758929vw)] lg:text-lg 2xl:text-[calc(13.3px+0.395833vw)]"
    >{label}</span
  >
</a>
