---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  text: string;
}

const { image, text } = Astro.props;
---

<div class="grid w-full lg:h-screen lg:grid-cols-2 snap-start">
  <Image src={image} alt="Anne Dupont" class="h-screen w-full object-cover" />
  <div
    class="flex h-screen w-full items-center justify-center bg-black text-center text-3xl text-white"
  >
    <p class="max-w-3xs">{text}</p>
  </div>
</div>
