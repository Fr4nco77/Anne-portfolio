---
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  lang: string;
  texts: {
    ctaText: string;
    ctaButtonLabel: string;
  };
}

const { lang, texts } = Astro.props;
---

<div class="flex min-h-screen w-full flex-col items-center justify-center">
  <div
    class="flex max-w-[70vw] flex-col items-center justify-center space-y-[2.5rem] text-center lg:max-w-[60vw]"
  >
    <p
      class="text-2xl min-[448px]:text-[calc(19.2px+1.07143vw)] min-[1440px]:text-[calc(35px+1.04167vw)] lg:text-5xl"
    >
      {texts.ctaText}
    </p>
    <a
      href={getRelativeLocaleUrl(lang, "/contact")}
      class="group flex items-center gap-1.5"
    >
      <span
        class="bg-accent-primary block size-0 rounded-full transition-all duration-300 group-hover:size-2.5"
      ></span>
      <span
        class="font-title block text-lg font-medium uppercase sm:text-xl 2xl:text-2xl"
        >{texts.ctaButtonLabel}</span
      >
    </a>
  </div>
</div>
